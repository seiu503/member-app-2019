{
  "name": "member-app-2019",
  "version": "1.0.0",
  "description": "SEIU 503 Membership Application 2019",
  "main": "server.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --exit",
    "start": "webpack -d | node server.js",
    "client": "cd client && yarn build && yarn start",
    "server": "LOG_LEVEL=debug supervisor --inspect server.js",
    "sass": "cd client && yarn dev",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\" \"yarn sass\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seiu503/member-app-2019.github.io.git"
  },
  "author": "Sarah Schneider, Jordan Heffernan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/seiu503/member-app-2019.github.io/issues"
  },
  "homepage": "https://github.com/seiu503/member-app-2019.github.io#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "chai-http": "^4.2.0",
    "concurrently": "^4.0.1",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "knex": "^0.16.3",
    "knex-migrate": "^1.7.0",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "pg": "^7.5.0",
    "serve-favicon": "^2.5.0",
    "uuid": "^3.3.2",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.3"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --parser flow --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": "12.1.0"
  }
}
